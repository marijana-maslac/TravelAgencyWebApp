

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @default("")
  email     String   @default("")
  password  String
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  reservations Reservation[]
}

enum UserRole {
  USER
  ADMIN
}

model TravelDestination {
  id          Int           @id @default(autoincrement())
  name        String
  description String?       @db.Text
  listings    TravelListing[] // Define a one-to-many relationship with TravelListing
}

model TravelListing {
  id              Int         @id @default(autoincrement())
  destinationId   Int         // Foreign key referencing the id of TravelDestination
  destination     TravelDestination @relation(fields: [destinationId], references: [id])
  price           Float
  date            DateTime
  reservations    Reservation[]
}

model Reservation {
  id              Int      @id @default(autoincrement())
  userId          Int
  user            User     @relation(fields: [userId], references: [id])
  travelListingId Int
  travelListing   TravelListing   @relation(fields: [travelListingId], references: [id])
  status          ReservationStatus @default(PENDING)
  createdAt       DateTime @default(now())
}

enum ReservationStatus {
  PENDING
  CONFIRMED
  CANCELLED
}